@model Bandodientu.Models.Location
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới địa điểm</h2>
    </div>
    <form asp-action="Create" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Name">Địa điểm</label>
                <input type="text" class="form-control mb-3" asp-for="Name">
            </div>
            <div class="form-group d-none">
                <label asp-for="Parent">Parent</label>
                <input type="text" class="form-control mb-3" asp-for="Parent" value="0">
            </div>
            <div class="form-group col-md-6 mt-3 mb-3">
                <label>
                    @Html.CheckBox("IsActive",false)
                    Hiển thị
                </label>
            </div>
        </div>
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i claas="bi bi-trash-fill"></i>Lưu lại
        </button>
    </form>
</main>