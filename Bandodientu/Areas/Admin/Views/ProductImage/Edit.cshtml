@model Bandodientu.Models.ProductImage
@using Bandodientu.Utilities;


<main id="main" class="main">
    <div class="pagetitle">
        <h1>Quản lý hình ảnh</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item">Quản lý sản phẩm</li>
                <li class="breadcrumb-item">Sửa hình ảnh</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body" style="margin-left:130px">
                        <h5 class="card-title">Các trường dữ liệu</h5>
                        <!-- General Form Elements -->
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="All"></div>
                            <div class="form-row">
                                <input type="text" class="form-control mb-3" asp-for="ProductImageID" type="hidden">
                                <div class="form-group col-md-12">
                                    <label class="control-label col-sm-2 col-form-label">Images</label>
                                    <div class="col-sm-10">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <button class="btn btn-success" type="button" onclick="openDialog()">Chọn</button>
                                            </div>
                                            <input type="text" style="margin-left:10px" class="form-control" asp-for="Image" id="file_input" aria-describedby="button-addon2" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6 mt-3 mb-3">
                                <label>
                                    @Html.CheckBox("IsActive",false)
                                    Hiển thị
                                </label>
                            </div>
                            <a asp-controller="ProductImage" asp-action="Index" asp-route-id="@Function._ProductID" style="margin-bottom:15px" class="btn btn-warning p-2"><i class="bi bi-arrow-left-circle"></i> Quay lại</a>
                            <button style="margin-left: 20px;margin-bottom:15px" type="submit" class="btn btn-success p-2">
                                <i class="bi bi-file-plus-fill"></i> Lưu
                            </button>
                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
@{
    var summerNoteFiles = new Bandodientu.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNoteFiles" model="summerNoteFiles" />
}

