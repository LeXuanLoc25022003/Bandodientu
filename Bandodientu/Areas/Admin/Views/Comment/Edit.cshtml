@model Bandodientu.Models.Comment
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa bình luận</h2>
    </div>
    <div class="container show p-5">
        <div class="row pb-2">
            <h2>Sửa bình luận</h2>
        </div>

        <form methoad="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="CommentID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="YourName">YourName</label>
                    <input type="text" class="form-control mb-3" asp-for="YourName" placeholder="Nhập tên">
                    <span asp-validation-for="YourName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-mb-6">
                    <label asp-for="YourEmail">YourEmail</label>
                    <input type="text" class="form-control mb-3" asp-for="YourEmail" placeholder="Nhập email />
                    <span asp-validation-for="YourEmail" class="alert-danger"></span>
                </div>
                <div class="form-group col-mb-6">
                    <label asp-for="DateTime">DateTime</label>
                    <input type="text" class="form-control mb-3" asp-for="DateTime" placeholder="Nhập thời gian" />
                    <span asp-validation-for="DateTime" class="alert-danger"></span>
                </div>
                <div class="form-group col-mb-6">
                    <label asp-for="Rate">Rate</label>
                    <input type="text" class="form-control mb-3" asp-for="Rate" placeholder="Nhập số sao" />
                    <span asp-validation-for="Rate" class="alert-danger"></span>
                </div>
                <div class="form-group col-mb-6">
                    <label asp-for="Review">Review</label>
                    <input type="text" class="form-control mb-3" asp-for="Review" placeholder="Nhập bình luận" />
                    <span asp-validation-for="Review" class="alert-danger"></span>
                </div>
                <div class="form-group col-mb-6">
                    <label asp-for="ProductID">ProductID</label>
                    <input type="text" class="form-control mb-3" asp-for="ProductID" placeholder="Nhập id sản phẩm" />
                    <span asp-validation-for="ProductID" class="alert-danger"></span>
                </div>
                <div class="form-group mt-5 mb-5">
                    <label>
                        @Html.CheckBox("IsActive",false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Comment" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>