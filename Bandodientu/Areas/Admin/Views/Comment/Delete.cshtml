@model Bandodientu.Models.Comment
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa bình luận</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CommentID">CommentID</label>
            <input type="text" class="form-control mb-3" asp-for="CommentID" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="YourName">YourName</label>
            <input type="text" class="form-control mb-3" asp-for="YourName" disabled>
        </div>
    </div>
    <form asp-action="Delete" methoad="post">
        <input type="hidden" asp-for="CommentID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i classs="bi bi-trash-fill"></i>Xóa bình luận
        </button>
    </form>
</main>