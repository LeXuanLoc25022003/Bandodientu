@using Bandodientu.Models;
@using Bandodientu.Models.ViewModels;
@model PostListViewModel;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2> Danh sách tin tức</h2>
    </div>
    <form asp-action="Search" asp-controller="Post" class="input1-group">
        <div class="month-year">
            <label for="lang-select">Chủ đề</label>
            <select name="month" id="lang-select">
                <option value="null">--Chọn--</option>
                <option value="3">Điện thoại</option>
                <option value="4">Laptop</option>
                <option value="5">Laptop cũ giá rẻ</option>
            </select>
        </div>
        <div class="input-group-append border-0">
            <button id="button-addon3" type="submit" class="btn btn-link text-success"><i class="bi bi-search"></i></button>
        </div>
    </form>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Post" asp-action="Create">
            <i class="bi bibi-file-earmark-text me-1">Thêm tin tức</i>
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th class="col-1 text-center">PostID</th>
                                <th class="col-3 text-center">Title</th>
                                <td class="col-2 text-center">Images</td>
                                <td class="col-1 text-center">CreatedDate</td>
                                <td class="col-1 text-center">Ẩn/Hiện</td>
                                <td class="col-3 text-center">Chức năng</td>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                            }
                            @foreach (var item in Model.Posts)
                            {
                                <tr class="text-center" id="tr_@item.PostID">
                                    <td>@(i++)</td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Details"
                                           asp-route-id="@item.PostID" class="text-primary">@item.Title</a>
                                    </td>
                                    <td class="text-center"><img style="width:50px;height:50px" src="@item.Images" /></td>
                                    <td class="text-center">@item.CreateDate</td>
                                        <td class="text-center">
                                            @if (item.IsActive == true)
                                            {
                                                <a href="#" class="IsActive" data-id="@item.PostID"><i class="bi bi-check2 text-success" style="font-size:25px"></i></a>
                                            }
                                            else
                                            {
                                                <a href="#" class="IsActive" data-id="@item.PostID"><i class="bi bi-x text-danger" style="font-size:25px"></i></a>
                                            }
                                        </td>
                                    <td class="text-center">
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Edit"
                                           asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
                                        <a asp-area="Admin" asp-controller="PostComments" asp-action="Index"
                                           asp-route-id="@item.PostID" class="btn btn btn-success btn-sm"
                                           title="Danh sách bình luận"><i class="bi bi-chat"></i></a>
                                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.PostID">Chi tiết</a>
                                        <a data-id="@item.PostID" class="btn btn-danger btn-sm btn-delete"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <ul class="list-group list-group-horizontal">
                @for (i = 1; i <= Model.PagingInfo.TotalPages; i++)
                {
                    @if (i == 1)
                    {
                        <li class="list-group-item"><a href="https://localhost:7295/Admin/Post/?productPage=@i">1</a></li>
                    }
                    else
                    {
                        <li class="list-group-item"><a href="https://localhost:7295/Admin/Post/?productPage=@i">@i</a></li>
                    }
                }
                <li class="list-group-item"><a href="https://localhost:7295/Admin/Post/?productPage=@(Model.PagingInfo.CurrentPage + 1)"><i class="bi bi-arrow-right-circle"></i></a></li>
            </ul>
        </div>
    </section>
</main>
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function () {
            $('body').on('click', '.IsActive', function (e) {
                e.preventDefault();
                var check = $(this);
                _id = check.data("id");
                $.ajax({
                    url: "/Admin/Post/IsActive",
                    type: "POST",
                    data: { id: _id },
                    success: function (rs) {
                        if (rs.isActive) {
                            $(check).html("<i class='bi bi-check2 text-success' style='font-size: 25px'></i>");
                        }
                        else {
                            $(check).html("<i class='bi bi-x text-danger' style='font-size:25px'></i>");
                        }
                    }
                });
            })
            $(".btn-delete").click(function () {
                _id = $(this).data("id");

                // Use SweetAlert for confirmation
                Swal.fire({
                    title: 'Bạn có chắc muốn xóa?',
                    text: "Thao tác này không thể hoàn tác!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xác nhận',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/Admin/Post/Delete",
                            type: "POST",
                            data: { id: _id },
                            success: function (result) {
                                if (result) {
                                    $("#tr_" + _id).remove();
                                    toastr.success('Xóa thành công');
                                } else {
                                    toastr.error('Xóa không thành công');
                                }
                            }
                        });
                    }
                });
            });
        });
    </script>
}


