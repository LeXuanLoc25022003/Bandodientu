@using Bandodientu.Utilities;
@model Bandodientu.Models.Customer
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chi tiết</h2>
    </div>
    <div class="container shadow p-5">
        <form>
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="CustomerID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="UserName">Title</label>
                    <input type="text" class="form-control mb-3" asp-for="UserName">
                    <span asp-validation-for="UserName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email"></label>
                <input type="text" class="form-control mb-3" asp-for="Email">
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Password">Password</label>
                <input type="text" class="form-control mb-3" asp-for="Password">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Birthday">Birthday</label>
                <input type="text" class="form-control mb-3" asp-for="Birthday">
            </div>
            <div class="form-group col-md-12">
                <label class="control-label">Avatar</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="Avater" id="file_input" aria-describedby="button-addon2">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="LocationID">LocationID</label>
                <input type="text" class="form-control mb-3" asp-for="LocationID">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="IsActive">IsActive</label>
                <input type="text" class="form-control mb-3" asp-for="IsActive">
            </div>            
            <a asp-action="Edit" asp-route-id="@Model.CustomerID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</main>
