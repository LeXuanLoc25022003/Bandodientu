@using Bandodientu.Utilities;
@model Bandodientu.Models.Order
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chi tiết</h2>
    </div>
    <div class="container shadow p-5">
        <form>
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="OrderID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="Code">Code</label>
                    <input type="text" class="form-control mb-3" asp-for="Code">
                    <span asp-validation-for="Code" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CustomerID"></label>
                <input type="text" class="form-control mb-3" asp-for="CustomerID">
                <span asp-validation-for="CustomerID" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control mb-3" asp-for="Address">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="ToTalAmount">ToTalAmount</label>
                <input type="text" class="form-control mb-3" asp-for="ToTalAmount">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="OrderStatusID">OrderStatusID</label>
                <input type="text" class="form-control mb-3" asp-for="OrderStatusID">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="CreateDate">CreateDate</label>
                <input type="text" class="form-control mb-3" asp-for="CreateDate">
            </div>
            <a asp-action="Edit" asp-route-id="@Model.OrderID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</main>
