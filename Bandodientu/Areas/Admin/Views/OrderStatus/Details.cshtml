@using Bandodientu.Utilities;
@model Bandodientu.Models.OrderStatus
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chi tiết</h2>
    </div>
    <div class="container shadow p-5">
        <form>
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="OrderStatusID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="OrderStatusID">OrderStatusID</label>
                    <input type="text" class="form-control mb-3" asp-for="OrderStatusID">
                    <span asp-validation-for="OrderStatusID" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input type="text" class="form-control mb-3" asp-for="Name">
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description">
            </div>
            <a asp-action="Edit" asp-route-id="@Model.OrderStatusID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</main>
