@model Bandodientu.Models.OrderStatus
@using Bandodientu.Utilities
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận chỉnh trạng thái đơn hàng</h2>
    </div>
    <div class="container show p-5">
        <div class="row pb-2">
            <h2>Sửa trạng thái đơn hàng</h2>
        </div>

        <form methoad="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="OrderStatusID" type="hidden">
                <div class="form-group col-md-6">
                    <label asp-for="OrderStatusID">OrderStatusID</label>
                    <input type="text" class="form-control mb-3" asp-for="OrderStatusID" placeholder="Nhập mã">
                    <span asp-validation-for="OrderStatusID" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-mb-6">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Nhập tên" />
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>
                <div class="form-group col-mb-6">
                    <label asp-for="Description">Description</label>
                    <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Nhập chi tiết" />
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="OrderStatus" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>