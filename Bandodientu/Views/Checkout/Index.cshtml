	@section Scripts6{
		<script>
			$(document).ready(function () {
				$("#c_send").click(function () {
					_address = $("#address").val();
					$.ajax({
						url: "/Checkout/Order",
						type: "POST",
						data: { address:_address},
						success: function (result) {
							if (result) {
								$("#address").val("");
								$("#c_send").hide();
								$(".button-details-cacenl").show();
								$(".billing-details").hide();
								toastr.success('Đặt hàng thành công');
							} else {
								toastr.error('Đặt hàng không thành công');
							}
						}
					});
				});
			})
		</script>
	}
	@section Scripts7{
		<script>
			$(document).ready(function () {
				$("#c_cancel").click(function () {
					_id = $(this).data("id");
					if (confirm("Bạn có muốn xóa không")) {
						$.ajax({
							url: "/Admin/Comment/Delete",
							type: "POST",
							data: { id: _id },
							success: function (result) {
								if (result) {
									$("#tr_" + _id).remove();
									toastr.success('Xóa thành công');
								}
								else {
									toastr.error('Xóa không thành công');
								}
							}
						})
					}
				});
			})
		</script>
	}
	@section Scripts8{
		<script>
			$(document).ready(function () {
				$("#c_detail").click(function () {
