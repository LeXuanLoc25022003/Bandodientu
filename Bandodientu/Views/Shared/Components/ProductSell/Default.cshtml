@using Bandodientu.Utilities
@model IList<Product>
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-4 col-xs-6">
				<div class="section-title">
					<h4 class="title">Điện thoại bán chạy nhất</h4>
					<div class="section-nav">
						<div id="slick-nav-3" class="products-slick-nav"></div>
					</div>
				</div>

				<div class="products-widget-slick" data-nav="#slick-nav-3">
					<div>
						@foreach (var item in Model)
						{
							string url = Function.TitleSlugGeneration("post", item.ProductName, item.ProductID);
							if (item.DiscountCode != null && item.MenuID == 3)
							{

								<div class="product-widget">
									<div class="product-img">
										<img src="@item.Image" alt="">
									</div>
									<div class="product-body">
										<p class="product-category">Category</p>
										<h3 class="product-name"><a href="/@url">@item.ProductName</a></h3>
										<h4 class="product-price">@item.OriginalPrice <del class="product-old-price">@item.DiscountedPrice</del></h4>
									</div>
								</div>
							}
						}
						<!-- product widget -->
					</div>
				</div>
			</div>

			@await Component.InvokeAsync("ProductSellLaptop")

			<div class="clearfix visible-sm visible-xs"></div>
			@await Component.InvokeAsync("ProductSellOldLaptop")
			


		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>